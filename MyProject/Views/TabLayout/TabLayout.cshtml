<body>



    <div id="header">
        @Html.Partial("_Header")
    </div>

    <aside id="menu">
        @Html.Partial("_Navigation")
    </aside>
    <div id="wrapper">
        <div id="Selector"></div>


        <!-- Footer-->
        @Html.Partial("_Footer")
    </div>
    <script type="text/javascript">

        var _curPageLink = '';

        $(function () {

            var tree = $('#tree').treeview({
                enableLinks: false,
                showBorder: false,
                expandIcon: 'glyphicon glyphicon-chevron-right',
                collapseIcon: 'glyphicon glyphicon-chevron-down',
                onhoverColor: '#f0f8ff',
                selectedBackColor: '#34495e',
                data: getTree1()
            });

            tree.on('nodeSelected', function (event, data) {
                if (data.href == _curPageLink) {
                    if (data.isOpen) {
                        window.open(data.href, '_blank');
                        return;
                    } else 
                        return;
                }

                if (data.href == '#')
                    return;
                _curPageLink = data.href;

                if (data.isOpen) {
                    window.open(data.href, '_blank');
                    return;
                }

                $("#Selector").html(wattingDialog());

                setTimeout(function () {
                    $.ajax({
                        url: data.href,
                        type: "Post",
                        success: function (data) {
                            $("#Selector").html('');
                            $("#Selector").html(data);
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            alert("Loading failed：" + errorThrown);
                            $("#Selector").html('');
                        }
                    });
                }, 1);


            });

        })

        function getTree1() {
            var json = @Html.Raw(MyProject.Helpers.TreeMenuHelper.GetMenuJson());
            return json;
        }


        //Demo data
        function getTree() {
            var data = [
                {
                    text: "Parent 1",
                    nodes: [
                        {
                            text: "Child 1",
                            icon: "fa fa-credit-card",
                            nodes: [
                                {
                                    text: "Grandchild",
                                    icon: "fa fa-credit-card",
                                    href: '@Url.Action("Menu", "system")'
                                },
                                {
                                    text: "Grandchild 2"
                                }
                            ],
                            state: {
                                "checked": false, "disabled": false, "expanded": true, "selected": false
                            }
                        },
                        {
                            text: "Child 2"
                        }
                    ]
                },
                {
                    text: "Parent 2"
                },
                {
                    text: "Parent 3"
                },
                {
                    text: "Parent 4"
                },
                {
                    text: "Parent 5"
                }
            ];
            // Some logic to retrieve, or generate tree structure
            return data;
        }

    </script>
