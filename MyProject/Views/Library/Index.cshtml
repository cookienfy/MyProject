        $('#idoubt').val('');
        $('#idoubtDesc').val('');
        $('#isolveWay').val('');
        $('#selDiff').val(0);
        $('#icontributor').val('');
        $('#cDate').data("DateTimePicker").date(moment().format('YYYY-MM-DD'));
    }

