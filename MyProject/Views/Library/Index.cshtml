                    }
                });

        });

        table.on('click', 'button#btnGridRemove', function () {
            var data = table.row($(this).parents('tr')).data();
            if (data != null || data != undefined) {
                if (confirm("是否删除选择的记录？")) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("DeleteLibrary", "Library")',
                        data: { id: data['LibraryId'] },
                        success: function (d) {

                            switch (d.value) {
                                case 0:
                                    alert('删除成功');
