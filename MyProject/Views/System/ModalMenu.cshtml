<div class="modal fade" id="myModalMenu" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            @*<div class="modal-header">
                <h2 class="modal-title">Meun</h2>
                <small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
            </div>*@
            <div class="modal-body">
                <div id="dvMenu" class="form-horizontal">
                    <div class="form-group">
                        <label for="inputSeq" class="col-sm-3 control-label">Fun Seq:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputSeq" placeholder="Please input your function sequence" v-bind:value="menu.FunSeq" v-model="menu.FunSeq">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputFunName" class="col-sm-3 control-label">Fun Name:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputFunName" placeholder="Please input your function name" v-model="menu.FunName">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputFunLink" class="col-sm-3 control-label">Fun Link:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputFunLink" placeholder="Please input your function link" v-model="menu.FunLink">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selIsOpen" class="col-sm-3 control-label">Is Open:</label>
                        <div class="col-sm-9">
                            <select id="selIsOpen" class="form-control" v-model="menu.FunLinkIsOpen">
                                <option v-for="o in isOpens" v-bind:value="o.value">{{o.text}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputFunPic" class="col-sm-3 control-label">Fun Pic:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputFunPic" placeholder="Please input your function picture" v-model="menu.FunPic">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="selParent" class="col-sm-3 control-label">Fun Parent:</label>
                        <div class="col-sm-9">
                            <select id="selParent" class="form-control" v-model="menu.FunParentId">
                                <option v-for="c in functions" v-bind:value="c.FunId">{{c.FunName}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="selType" class="col-sm-3 control-label">Function Type:</label>
                        <div class="col-sm-9">
                            <select id="selType" class="form-control" v-model="menu.FunTypeId">
                                <option v-for="c in codes" v-bind:value="c.CodeId">{{c.Code}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="selLCV" class="col-sm-3 control-label">LCV:</label>
                        <div class="col-sm-9">
                            <select id="selLCV" class="form-control" v-model="menu.LCV">
                                <option v-for="l in lcvs" v-bind:value="l.value">{{l.text}}</option>
                            </select>
                        </div>
                    </div>


                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btnSave" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
